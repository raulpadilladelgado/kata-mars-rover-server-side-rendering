# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Planet control panel
GET         /                     infrastructure.controllers.PlanetController.retrieve()

# Mars Rover control panel
GET         /rover                infrastructure.controllers.MarsRoverController.retrieveStatus()
POST        /rover                infrastructure.controllers.MarsRoverController.land()
POST        /rover/command        infrastructure.controllers.MarsRoverController.orderCommand()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
